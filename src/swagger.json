  "paths": {
    "/users":{
      "post": {
        "tags": ["Users"],
        "summary": "Create User",
        "description": "Create a new user!",
        "requestBody":{
          "content": {
            "application/json":{
              "schema":{
                "type": "object",
                "properties": {
                  "name":{ "type":"string"},
                  "email":{"type": "string"},
                  "password":{"type": "string"}
                },
                "example": {
                  "name": "User name sample",
                  "email": "usertest@email.com",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          },
          "500":{
            "description": "User already exists!"
          }
        }
      },
      "get":{
        "tags": ["Users"],
        "summary": "List users",
        "description": "List all users",
        "responses":{
          "200":{
            "description": "Users",
            "content": {
              "application/json":{
                "schema":{
                  "type": "array",
                  "items":{
                    "type": "object",
                    "properties": {
                      "name":{ "type":"string"},
                      "email":{ "type": "string"},
                      "password":{ "type": "string"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}